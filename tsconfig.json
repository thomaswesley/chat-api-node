{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "Node",
        "outDir": "./dist",
        "rootDir": "./src",
        "esModuleInterop": true,
        "moduleDetection": "force",
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*.ts",
        "src/app.ts"
    ], 
    "exclude": [
        "node_modules"
    ],
}